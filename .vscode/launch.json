{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug NovaIDE",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/src/extension/nova-core/index.ts",
      "outFiles": ["${workspaceFolder}/build/**/*.js"],
      "sourceMaps": true,
      "preLaunchTask": "npm: build",
      "smartStep": true,
      "internalConsoleOptions": "openOnSessionStart",
      "outputCapture": "std"
    }
  ]
}